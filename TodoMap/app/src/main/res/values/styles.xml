<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CreateTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <!-- DatePicker 모드 설정 -->
        <item name="android:datePickerMode">calendar</item>

        <!-- Accent color -->
        <item name="colorAccent">@color/color_point</item>

        <!-- 선택한 날짜 배경 색 및 Highlight item color -->
        <item name="colorControlActivated">@color/color_point</item>
        <item name="colorControlHighlight">#FF6D63</item>

        <!-- 텍스트 색상 설정 -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/white</item>
        <item name="android:textColorPrimary">@color/color_txt</item>

        <!-- 텍스트 크기 설정 -->
        <item name="android:textSize">20sp</item>

        <item name="android:timePickerStyle">@style/MyTimePickerTheme</item>
    </style>

    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <!-- 스플래시 테마 -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/color_point</item>
    </style>
</resources>